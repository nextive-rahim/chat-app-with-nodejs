<%- include('partials/commonHeader') %>

<div id="login-container">
  <div id="left-column"></div>

  <div id="branding">
    <img src="./images/logo.png" />
    <h1>Login - Chat Application</h1>
  </div>

  <div id="login-form">
    <form method="post" action="/">

      <!-- Username Input -->
      <input
        type="text"
        name="username"
        placeholder="enter mobile or email"
        value="<%= data && data.username ? data.username : '' %>"
      />

      <% if (errors && errors.username) { %>
        <p class="error show"><%= errors.username.msg %></p>
      <% } %>

      <!-- Password Input -->
      <input type="password" name="password" placeholder="enter password" />

      <% if (errors && errors.password) { %>
        <p class="error show"><%= errors.password.msg %></p>
      <% } %>

      <% if (errors && errors.common) { %>
        <p class="error show"><%= errors.common.msg %></p>
      <% } %>

      <input type="submit" value="Login" />
    </form>
  </div>
</div>
</body>
</html>
